<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="25dp"
            tools:context=".AddDose">

            <!--Log out-->
            <TextView
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/ripple_effect"
                android:text="@string/log_out"
                android:textColor="@color/links"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Profile image-->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"

                android:src="@drawable/profile_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/log_out" />

            <!--Account holder name-->
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:autofillHints="Units left"
                android:background="@drawable/edit_text_border"
                android:hint="@string/name"
                android:inputType="text"
                android:maxLength="10"
                android:padding="8dp"
                android:text="@string/name"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/img" />

            <!--Heights-->
            <LinearLayout
                android:id="@+id/height_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/name">

                <EditText
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="4"
                    android:autofillHints="No of doses"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/height"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="8dp"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/height_units"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/edit_text_border"
                    android:textSize="15sp" />

            </LinearLayout>

            <!--Weights-->
            <LinearLayout
                android:id="@+id/weight_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/height_container">

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="4"
                    android:autofillHints="No of doses"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/weight"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="8dp"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/weight_units"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/edit_text_border"
                    android:textSize="15sp" />

            </LinearLayout>

            <!--Phone number-->
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:autofillHints="Units left"
                android:background="@drawable/edit_text_border"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="8dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/weight_container" />

            <!--Date Of Birth-->
            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_text_border"
                android:padding="8dp"
                android:text="@string/date_of_birth"
                android:textSize="15sp"
                app:drawableEndCompat="@drawable/date_range"
                app:layout_constraintTop_toBottomOf="@+id/phone_number" />

            <!--Gender-->
            <Spinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_text_border"
                android:drawableEnd="@drawable/search_icon"
                android:padding="8dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/dob" />


            <!--YourBMI-->
            <TextView
                android:id="@+id/your_bmi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/roboto_light"
                android:padding="8dp"
                android:text="@string/your_bmi_is"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/gender" />

            <!--BMI-->
            <TextView
                android:id="@+id/bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/dummy_bmi_value"
                android:textAlignment="center"
                android:textColor="@color/warn"
                android:textSize="40sp"
                app:layout_constraintTop_toBottomOf="@+id/your_bmi"

                />

            <!--BMI recommendation-->
            <TextView
                android:id="@+id/advice"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/roboto_light"
                android:padding="8dp"
                android:text="@string/dummy_bmi_recommendation"
                android:textAlignment="center"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@+id/bmi"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:background="@color/black"
                android:fontFamily="@font/roboto_light"
                android:padding="8dp"
                android:text="@string/update_profile"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/advice" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>