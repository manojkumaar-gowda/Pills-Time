<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountRegistration">
    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".AddDose"
            android:layout_marginBottom="25dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acc"
                android:background="@drawable/ripple_effect"
                android:textColor="@color/links"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                />


            <TextView
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:background="@drawable/ripple_effect"
                android:textColor="@color/links"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile_pic"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/log_out"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="8dp"
                android:textSize="15sp"
                android:maxLength="10"
                android:text="Name"
                android:hint="Name"
                app:layout_constraintTop_toBottomOf="@+id/img"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="8dp"
                android:autofillHints="Units left"
                />

            <LinearLayout
                android:id="@+id/height_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_height="48dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:id="@+id/height"
                    android:padding="8dp"
                    android:maxLength="4"
                    android:textSize="15sp"
                    android:hint="@string/height"
                    android:inputType="number"
                    android:background="@drawable/edit_text_border"
                    android:autofillHints="No of doses" />

                <Spinner
                    android:id="@+id/height_units"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/edit_text_border"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/weight_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:layout_constraintTop_toBottomOf="@+id/height_container"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_height="48dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:id="@+id/weight"
                    android:padding="8dp"
                    android:maxLength="4"
                    android:textSize="15sp"
                    android:hint="@string/weight"
                    android:inputType="number"
                    android:background="@drawable/edit_text_border"
                    android:autofillHints="No of doses" />

                <Spinner
                    android:id="@+id/weight_units"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/edit_text_border"
                    android:textSize="15sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="8dp"
                android:textSize="15sp"
                android:maxLength="10"
                android:hint="Phone Number"
                android:inputType="phone"
                app:layout_constraintTop_toBottomOf="@+id/weight_container"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="8dp"
                android:autofillHints="Units left"
                />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:drawableEnd="@drawable/ic_baseline_date_range_24"
                android:background="@drawable/edit_text_border"
                app:layout_constraintTop_toBottomOf="@+id/phone_number"
                android:text="Date of Birth"
                />

            <Spinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="8dp"
                android:drawableEnd="@drawable/search"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_border"
                app:layout_constraintTop_toBottomOf="@+id/dob"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:drawableEnd="@drawable/location"
                android:background="@drawable/edit_text_border"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                android:text="38°56’23”N, 71°0’36”W"
                />

            <LinearLayout
                android:id="@+id/terms_and_services"
                android:layout_width="match_parent"
                android:layout_height="0.45in"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/location"
                >
                <CheckBox
                    android:id="@+id/checkTermsAndServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Signing up, you agree to our Terms and that you have read our Data Use Policy, including our Cookie Use"/>
            </LinearLayout>

            <Button
                android:id="@+id/regButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@color/black"
                android:padding="8dp"
                android:text="CREATE PROFILE"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/terms_and_services"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>