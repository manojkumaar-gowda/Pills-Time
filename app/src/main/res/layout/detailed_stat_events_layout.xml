<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/upcoming_events"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/turnOnOffNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:visibility="gone"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:track="@drawable/switch_track"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/turnOnOffNotification">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#555252"
                >
                <TextView
                    android:id="@+id/timeRV1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:text="8.00 AM"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_light"/>
                <TextView
                    android:id="@+id/dateRV1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:text="15/08/2022"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_thin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/takenMedsRV1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="10sp"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="14sp"
                    android:background="@drawable/left_border_green"
                    app:layout_constraintLeft_toLeftOf="parent" />


                <TextView
                    android:id="@+id/leftMedsRV1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:lineSpacingExtra="10sp"
                    android:background="@drawable/left_border_red"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
            </LinearLayout>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>